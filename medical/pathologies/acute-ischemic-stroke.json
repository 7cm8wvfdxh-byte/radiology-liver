  "radiology": {
    "overview": "İlk adım kanamayı dışlamak için non-kontrast BT’dir. Uygun hastada CTA/CTP veya MR-DWI/Perf ile büyük damar oklüzyonu ve kurtarılabilir doku değerlendirilir.",
    "modalities": {
      "CT": {
        "summary": "Non-kontrast BT: hemoraji dışlama + erken iskemi bulguları; uygun olguda CTA/CTP ile damar ve perfüzyon değerlendirilir (altyapıya göre).",
        "key_findings": [
          "Erken iskemi: insular ribbon kaybı, lentiform silinme",
          "Sulkus silinmesi, gri-beyaz ayrım kaybı",
          "Hiperdens damar işareti (trombus)"
        ],
        "supportive_findings": [
          "ASPECTS ile yaygınlık değerlendirmesi"
        ],
        "complications": [
          "Hemorrhagic transformation (takipte)",
          "Malign MCA infarktı/ödem"
        ],
        "pitfalls": [
          "Çok erken dönemde BT normal olabilir",
          "Hareket artefaktı",
          "Eski enfarkt ile karışma"
        ],
        "ddx_imaging": [
          "İntrakraniyal hemoraji (ilk dışlanacak)",
          "Migren/kriz sonrası değişiklikler",
          "Tümör/enfeksiyon (subakut tabloda)"
        ],
        "how_to_distinguish": [
          {
            "name": "Akut vs kronik enfarkt",
            "how_to_distinguish": "Akutta sulkus silinmesi/ödem ve belirgin gri-beyaz kaybı; kronikte encephalomalacia ve volüm kaybı beklenir."
          }
        ]
      },
      "MR_MRCP": {
        "summary": "MR (özellikle DWI) akut iskemide çok duyarlıdır; FLAIR-DWI mismatch bazı olgularda zamanlama hakkında fikir verebilir.",
        "key_findings": [
          "DWI kısıtlılığı (akut iskemi)",
          "ADC düşüklüğü",
          "FLAIR negatifliği (erken saatler)"
        ],
        "supportive_findings": [
          "MRA ile damar oklüzyonu (altyapıya göre)"
        ],
        "complications": [
          "Hemorrhagic transformation (GRE/SWI ile)",
          "Ödem/kitle etkisi"
        ],
        "pitfalls": [
          "Küçük kortikal lezyonlarda artefakt",
          "Posterior fossa değerlendirmesinde teknik sınırlılıklar"
        ],
        "ddx_imaging": [
          "Postiktal değişiklik",
          "Ensefalit",
          "Demyelinizan lezyon (klinik bağlama göre)"
        ],
        "how_to_distinguish": []
      },
      "USG": {
        "summary": "Karotis/Doppler USG etiyoloji (stenoz) değerlendirmesinde yardımcıdır; akut triage’da primer değil.",
        "key_findings": [
          "Karotis stenoz/plak"
        ],
        "supportive_findings": [],
        "complications": [],
        "pitfalls": [
          "Akut büyük damar oklüzyonunu doğrudan göstermez",
          "Operatör bağımlı"
        ],
        "ddx_imaging": [],
        "how_to_distinguish": []
      }
    }
  },
