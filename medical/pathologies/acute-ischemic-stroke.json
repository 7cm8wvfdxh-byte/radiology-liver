{
  "id": "acute-ischemic-stroke",
  "title": "Akut İskemik İnme",
  "core": {
    "definition": "Serebral kan akımının akut azalmasına bağlı nörolojik defisit ile seyreden, çoğunlukla tromboz/emboliden kaynaklanan inmedir.",
    "etiology": [
      "Büyük damar oklüzyonu (tromboz/embolus)",
      "Kardiyoemboli (AF vb.)",
      "Küçük damar hastalığı (laküner)",
      "Nadir: diseksiyon, vaskülit"
    ],
    "risk_factors": [
      "Hipertansiyon",
      "Diabetes mellitus",
      "Atriyal fibrilasyon",
      "Hiperkolesterolemi",
      "Sigara",
      "İleri yaş",
      "Geçirilmiş TIA/inme"
    ],
    "pathophysiology_short": [
      "İskemik çekirdek + penumbra kavramı",
      "Zaman bağımlı nöronal hasar",
      "Reperfüzyon tedavileri (IVT/MT) için hızlı triage"
    ]
  },
  "clinical": {
    "symptoms": [
      "Ani başlayan güçsüzlük (kol/bacak)",
      "Konuşma bozukluğu (afazi/dizartri)",
      "Görme kaybı/hemianopi",
      "Yüzde asimetri",
      "Denge bozukluğu"
    ],
    "physical_exam": [
      "Fokal nörolojik defisit",
      "Bilinç değişikliği (büyük inmelerde)",
      "NIHSS ile şiddet değerlendirmesi"
    ],
