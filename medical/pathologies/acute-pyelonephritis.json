  "management": {
    "first_line": [
      {
        "t": "Hemodinamik değerlendirme + sepsis protokolü (gerektiğinde)",
        "w": 6
      },
      {
        "t": "Uygun ampirik antibiyotik (yerel direnç + komplike riskine göre) → kültüre göre daralt",
        "w": 5
      },
      {
        "t": "Sıvı replasmanı, analjezi/antiemetik, oral alım değerlendirmesi",
        "w": 4
      }
    ],
    "when_to_escalate": [
      {
        "t": "Obstrüksiyon/pyonefroz şüphesi → acil üroloji + drenaj",
        "w": 6
      },
      {
        "t": "48–72 saatte klinik yanıt yok → görüntüleme + apse/gaz/taş araştır",
        "w": 5
      },
      {
        "t": "Persistan hipotansiyon/laktat ↑ → YBÜ",
        "w": 6
      }
    ],
    "complication_management": [
      {
        "t": "Renal/perinefrik apse: antibiyotik + gerekirse perkütan drenaj",
        "w": 5
      },
      {
        "t": "Emfizematöz piyelo: acil geniş spektrum + drenaj/cerrahi kararı",
        "w": 6
      }
    ],
    "follow_up": [
      {
        "t": "Klinik iyileşme yoksa veya komplike olguda kontrol görüntüleme düşün",
        "w": 3
      },
      {
        "t": "Tekrarlayan olguda altta yatan taş/obstrüksiyon/reflü araştır",
        "w": 3
      }
    ]
  },
