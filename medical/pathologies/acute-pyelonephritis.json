      "when_to_image": [
        {
          "t": "Komplike piyelonefrit şüphesi (obstrüksiyon, taş, apse, gaz)",
          "w": 6
        },
        {
          "t": "Tedaviye yanıt yok / 48–72 saatte düzelmeme",
          "w": 5
        },
        {
          "t": "Şiddetli sepsis / immünsüpresyon / DM",
          "w": 5
        }
      ],
      "protocol": [
        {
          "t": "Tercihen kontrastlı (nefrogram fazı ± geç faz); taş/obstrüksiyon için nonkontrast eklenebilir.",
          "w": 4
        }
      ],
      "main_findings": [
        {
          "t": "Striated nephrogram / heterojen parankimal kontrastlanma",
          "w": 5,
          "weight": 6
        },
        {
          "t": "Perinefrik yağ doku stranding",
          "w": 4,
          "weight": 4
        },
        {
          "t": "Fokal hipodens alanlar (lobar nefrit)",
          "w": 4,
          "weight": 4
        }
      ],
      "supportive_findings": [
        {
          "t": "Üreter duvar kalınlaşması / periüreterik stranding",
          "w": 3,
          "weight": 3
        },
        {
          "t": "Hidronefroz / obstrüksiyon (taş)",
          "w": 5,
          "weight": 6
        }
      ],
      "complications": [
        {
          "t": "Renal/perinefrik apse: rim-enhancement + santral hipodensite",
          "w": 6,
          "weight": 7
        },
        {
          "t": "Emfizematöz piyelonefrit: parankimde veya toplayıcı sistemde gaz",
          "w": 6,
          "weight": 8
        },
        {
          "t": "Pyonefroz",
          "w": 6,
          "weight": 7
        }
      ],
      "ddx": [
        {
          "t": "Renal infarkt (kortikal kama şeklinde hipoperfüzyon)",
          "w": 3,
          "weight": 4
        },
        {
          "t": "Renal tümör (fokal kitleleşme) / apse ile karışabilir",
          "w": 2,
          "weight": 2
        }
      ],
      "pitfalls": [
        {
          "t": "Kontrastsız CT parankimal inflamasyonu kaçırabilir; komplikasyon/taş için iyi ama ‘piyelo’ sensitivitesi sınırlı.",
          "w": 4
        },
        {
          "t": "Kortikomedüller faz seçimi ve hidrasyon durumu görünümü etkileyebilir.",
          "w": 2
        }
      ],
      "distinguish": [
        {
          "title": "Renal infarkt vs akut piyelonefrit",
          "points": [
            "İnfarktta kama şeklinde kortikal hipoperfüzyon, sıklıkla toplayıcı sistem bulgusu/piyüri eşlik etmeyebilir.",
            "Piyeloda striated nephrogram + perinefrik stranding ve klinikte piyüri/ateş daha tipik."
          ]
        },
        {
          "title": "Renal apse vs solid kitle",
          "points": [
            "Apsede rim-enhancement + santral sıvı yoğunluğu, klinik enfeksiyon bulguları ve tedaviyle gerileme.",
            "Solid kitlelerde persistans, daha solid kontrast paterni ve enfeksiyon kliniği olmayabilir."
          ]
        }
      ]
    },
    "MR": {
      "when_to_image": [
        {
          "t": "Kontrast verilemeyen hastada (seçilmiş olgular)",
          "w": 4
        },
        {
          "t": "Gebelikte USG yetersiz ve komplikasyon şüphesi",
          "w": 4
